<table class="options">
<tr>
	<th colspan="2">Search Options</th>
</tr>
	<tr>
		<th><%= label_tag :abbreviation, "Abbreviation", title: "Abbreviations which are locally defined in an input document will be automatically detected. It defaults to true." %></th>
		<th><%= label_tag :longest, "Longest", title: "Longest only annotation: the output will not include embedded annotations." %></th>
	</tr>
	<tr>
		<td>
			<%= hidden_field_tag :abbreviation, 'false' %>
			<%= check_box_tag :abbreviation, 'true', @permitted[:abbreviation].nil? ? TextAnnotator::OPTIONS_DEFAULT[:abbreviation] : @permitted[:abbreviation] %>
		</td>
		<td>
			<%= hidden_field_tag :longest, 'false' %>
			<%= check_box_tag :longest, 'true', @permitted[:longest].nil? ? TextAnnotator::OPTIONS_DEFAULT[:longest] : @permitted[:longest] %>
		</td>
	</tr>
</table>